<form action="/" method="POST" id="contacting">
  <div>
    <img src="/assets/hero/logo.svg" alt="Logo" class="logoImg"/>
  </div>
  <div>
    <label for="fName" id="fNameL">First Name</label>
    <input
      type="text"
      name="fname"
      id="fName"
      required
    />
  </div>
  <div>
    <label for="lName" id="lNameL">Last Name</label>
    <input
      type="text"
      name="lname"
      id="lName"
      required
    />
  </div>
  <div>
    <label for="email">E-mail address</label>
    <input
      type="email"
      name="email"
      id="email"
      required
    />
  </div>
  <div>
    <label for="message">Message</label>
    <textarea
      name="message"
      id="message"
      placeholder="Time for your business to shine"
      required
    ></textarea>
  </div>
  <input
    type="submit"
    name="submit"
    id="submit"
    value="Contact Me"
    class="btn"
  />
</form>
